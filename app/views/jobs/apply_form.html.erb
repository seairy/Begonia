<div role="main" class="main">
  <section class="page-top">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <ul class="breadcrumb">
            <li><%= link_to '首页', root_path %></li>
            <li class="active">诚聘英才</li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h1>诚聘英才</h1>
        </div>
      </div>
    </div>
  </section>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <section class="panel">
          <header class="panel-heading">
            <h2 class="panel-title">职位申请表</h2>
          </header>
          <div class="panel-body">
            <form class="form-horizontal form-bordered" method="get">
              <div class="form-group">
                <label class="col-md-3 control-label" for="inputDefault">姓名</label>
                <div class="col-md-6">
                  <input type="text" class="form-control" id="inputDefault">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label" for="inputDefault">性别</label>
                <div class="col-md-6">
                  <div class="radio-custom">
                    <input type="radio" id="radioExample1" name="radioExample">
                    <label for="radioExample1">男</label>
                  </div>
                  <div class="radio-custom">
                    <input type="radio" id="radioExample2" name="radioExample">
                    <label for="radioExample2">女</label>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label" for="inputSuccess">申请职位</label>
                <div class="col-md-6">
                  <select class="form-control mb-md">
                    <option>市场部经理</option>
                    <option>市场部主管</option>
                    <option>UI设计师</option>
                    <option>文字编辑</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label" for="textareaDefault">个人简历</label>
                <div class="col-md-6">
                  <textarea class="form-control" rows="16" id="textareaDefault"></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12 text-center">
                  <input type="submit" value="提交" class="btn primary" />
                  <input type="reset" value="重置" class="btn" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>